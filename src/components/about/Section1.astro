---
import {
  TypographyH1,
  TypographyP,
  TypographyLead,
} from '../ui/typography.tsx';
import { Members } from '../ui/Members.tsx';
---

<section class="section bg-neutral-950 min-h-screen flex items-center justify-center">
    <div class="container-custom text-center">
    <div class="text-center mb-12">
      <TypographyH1 className="text-white" data-i18n="about.members.title">Our Team</TypographyH1>
    </div>

    <!-- Team members -->
    <div class="mb-12 max-w-4xl mx-auto">
      <Members client:load />
    </div>

    <!-- Description -->
    <div class="text-center max-w-2xl mx-auto">
      <TypographyP className="text-gray-300" data-i18n="about.description">
        We’re building a code editor designed for university students, combining
        simplicity, performance, and learning-oriented features. Unlike generic
        editors, our platform integrates directly with coursework, weekly
        challenges, and real-time feedback — helping students not just code,
        but grow their skills in an engaging way.
      </TypographyP>
    </div>
  </div>
</section>