---
import { SectionTitle } from './ui/SectionTitle';
import { SectionSubtitle } from './ui/SectionSubtitle';
import { CTAButton } from './ui/CTAButton';
---

<section class="section bg-neutral-900">
  <div class="container-custom text-center">
    <SectionTitle
      client:load
      defaultText="Start Learning to Code"
      i18nKey="section4.title"
      className="mb-6"
    />
    <SectionSubtitle
      client:load
      defaultText="Practice, compete, and rise through real coding challenges."
      i18nKey="section4.subtitle"
      className="mb-8"
    />
    <CTAButton
      client:load
      defaultText="Join Level Up Journey"
      i18nKey="section4.button"
      href="#"
    />
  </div>
</section>
