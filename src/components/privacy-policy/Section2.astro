---
// Privacy Policy Content Section
import TranslatedText from '../TranslatedText.astro';
---

<section class="bg-neutral-950 pb-16 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Section 1: About This Project -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.1.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <TranslatedText keyPath="privacyPolicy.sections.1.content" tag="p" class="text-gray-300 leading-relaxed" />
    </div>

    <!-- Section 2: What Data We Collect -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.2.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <ul class="list-disc list-inside text-gray-300 leading-relaxed space-y-2">
        <TranslatedText keyPath="privacyPolicy.sections.2.list.0" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.2.list.1" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.2.list.2" tag="li" />
      </ul>
      <TranslatedText keyPath="privacyPolicy.sections.2.content" tag="p" class="text-gray-300 leading-relaxed mt-4" />
    </div>

    <!-- Section 3: How We Use Your Data -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.3.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <ul class="list-disc list-inside text-gray-300 leading-relaxed space-y-2">
        <TranslatedText keyPath="privacyPolicy.sections.3.list.0" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.3.list.1" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.3.list.2" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.3.list.3" tag="li" />
      </ul>
      <TranslatedText keyPath="privacyPolicy.sections.3.content" tag="p" class="text-gray-300 leading-relaxed mt-4" />
    </div>

    <!-- Section 4: Data Storage & Security -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.4.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <TranslatedText keyPath="privacyPolicy.sections.4.content" tag="p" class="text-gray-300 leading-relaxed" />
    </div>

    <!-- Section 5: Your Rights -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.5.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <ul class="list-disc list-inside text-gray-300 leading-relaxed space-y-2">
        <TranslatedText keyPath="privacyPolicy.sections.5.list.0" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.5.list.1" tag="li" />
        <TranslatedText keyPath="privacyPolicy.sections.5.list.2" tag="li" />
      </ul>
    </div>

    <!-- Section 6: Contact -->
    <div class="mb-12">
      <TranslatedText keyPath="privacyPolicy.sections.6.title" tag="h2" class="text-2xl md:text-3xl font-bold text-white mb-4" />
      <TranslatedText keyPath="privacyPolicy.sections.6.content" tag="p" class="text-gray-300 leading-relaxed" />
    </div>

    <!-- Section 7: Contact -->
    <div class="mb-12">
      <img src="/level-up-cat-walking.gif" alt="Level Up Cat Walking" class="max-w-xs mx-auto" />
    </div>
  </div>
</section>
