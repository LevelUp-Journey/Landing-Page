---
interface Props {
  rank: number;
  user: string;
  score: number;
  challenges: number;
  rankIcon: string;
}

const { rank, user, score, challenges, rankIcon } = Astro.props;
---

<tr class="border-b border-gray-700 hover:bg-white/10 transition-all duration-300 ease-in-out">
  <td class="py-2 px-2 sm:py-3 sm:px-4 lg:py-4 lg:px-6 text-center font-bold text-gray-300 transition-colors duration-300 text-[10px] sm:text-xs lg:text-base">{rank}</td>
  <td class="py-2 px-2 sm:py-3 sm:px-4 lg:py-4 lg:px-6">
    <div class="flex items-center gap-1 sm:gap-2 lg:gap-3">
      <img src={rankIcon} alt={`Rank ${rank}`} class="w-5 h-5 sm:w-6 sm:h-6 lg:w-8 lg:h-8 transition-transform duration-300 hover:scale-110" />
      <span class="font-semibold text-white transition-colors duration-300 text-[10px] sm:text-xs lg:text-base">{user}</span>
    </div>
  </td>
  <td class="py-2 px-2 sm:py-3 sm:px-4 lg:py-4 lg:px-6 text-center font-bold text-white transition-all duration-300 text-[10px] sm:text-xs lg:text-base">{score}</td>
  <td class="py-2 px-2 sm:py-3 sm:px-4 lg:py-4 lg:px-6 text-center text-gray-300 transition-colors duration-300 text-[10px] sm:text-xs lg:text-base">{challenges}</td>
</tr>
