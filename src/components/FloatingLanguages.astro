---
const cppIcon = '/assets/section1/programming-languages/c++.svg';
const javaIcon = '/assets/section1/programming-languages/java.svg';
const javascriptIcon = '/assets/section1/programming-languages/javascript.svg';
const pythonIcon = '/assets/section1/programming-languages/python.svg';
---

<div class="floating-languages-container" id="floating-container"></div>

<template id="bubble-templates">
  <div class="bubble-template" data-lang="javascript"><img src={javascriptIcon} class="icon" alt="JavaScript" /></div>
  <div class="bubble-template" data-lang="python"><img src={pythonIcon} class="icon" alt="Python" /></div>
  <div class="bubble-template" data-lang="cpp"><img src={cppIcon} class="icon" alt="C++" /></div>
  <div class="bubble-template" data-lang="java"><img src={javaIcon} class="icon" alt="Java" /></div>
</template>

<style>
  .floating-languages-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 5;
  }

  .bubble {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 55px;
    height: 55px;
    transition: transform 0.2s ease;
  }

  .bubble:hover {
    transform: scale(1.15);
  }

  .bubble :global(.icon) {
    width: 100%;
    height: 100%;
    opacity: 0.5;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.5));
  }

  @media (max-width: 768px) {
    .bubble {
      width: 40px !important;
      height: 40px !important;
    }
  }

  @media (max-width: 480px) {
    .bubble {
      width: 35px !important;
      height: 35px !important;
    }
  }
</style>

<script>
  import { BubblePhysics } from './FloatingLanguages/BubblePhysics';

  const physics = new BubblePhysics();

  document.addEventListener('DOMContentLoaded', () => {
    physics.init();
  });

  document.addEventListener('astro:before-swap', () => {
    physics.destroy();
  });
</script>
