---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-16">
  <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
    {title}
  </h2>
  <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
    {subtitle}
  </p>
</div>
