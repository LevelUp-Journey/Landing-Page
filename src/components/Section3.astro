    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Leaderboard Table -->
      <div class="order-2 lg:order-1">
        <LeaderboardTable />
      </div>

      <!-- Text Content -->
      <div class="order-1 lg:order-2 text-center flex flex-col justify-center h-full">
