---
import { Leaderboard } from './ui/Leaderboard';
import { SectionTitle } from './ui/SectionTitle';
import { Section3Subtitle } from './ui/Section3Subtitle';
import { SectionDescription } from './ui/SectionDescription';
---

<section class="section bg-neutral-950">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Leaderboard Table -->
      <div class="order-2 lg:order-1">
        <Leaderboard
          client:load
          defaultRank="Rank"
          defaultUser="User"
          defaultScore="Score"
          defaultChallenges="Challenges"
        />
      </div>

      <!-- Text Content -->
      <div class="order-1 lg:order-2 text-center flex flex-col justify-center h-full">
        <SectionTitle
          client:load
          defaultText="Compete. Rank. Shine."
          i18nKey="section3.title"
          className="text-3xl md:text-4xl"
        />
        <Section3Subtitle
          client:load
          defaultText="Challenge your peers. Climb the ranks."
          i18nKey="section3.subtitle"
        />
        <SectionDescription
          client:load
          defaultText="Join a community of students who share your passion for programming. Each coding challenge is a chance to test your problem-solving skills, earn points, and see how you stack up against others. With every victory, you move higher on the leaderboardâ€”driven by competition, collaboration, and the pursuit of mastery."
          i18nKey="section3.description"
          className="text-sm max-w-2xl mx-auto"
        />
      </div>
    </div>
  </div>
</section>
