---
// Header component
import LanguageDropdown from './Header/LanguageDropdown.astro';
import MobileMenu from './Header/MobileMenu.astro';
import Title from './Title.astro';
import TranslatedText from './TranslatedText.astro';
import './Header/header.css';
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 border-b border-transparent">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo y título -->
      <a href="/" class="hover:opacity-80 transition-opacity">
        <Title />
      </a>

      <!-- Navegación e iconos a la derecha (desktop) -->
      <div class="hidden md:flex items-center gap-8">
        <!-- Navegación principal -->
        <nav class="flex items-center gap-6">
          <a href="/product" class="text-white hover:text-gray-300 transition-colors text-sm">
            <TranslatedText keyPath="footer.product" />
          </a>
          <span class="text-gray-500">|</span>
          <a href="/about-team" class="text-white hover:text-gray-300 transition-colors text-sm">
            <TranslatedText keyPath="footer.aboutTeam" />
          </a>
          <span class="text-gray-500">|</span>
          <a href="/help-center" class="text-white hover:text-gray-300 transition-colors text-sm">
            <TranslatedText keyPath="footer.helpCenter" />
          </a>
        </nav>

        <!-- Iconos de navegación -->
        <div class="flex items-center gap-6">
          <LanguageDropdown />

          <button
            class="hover:opacity-80 transition-opacity"
            aria-label="Cuenta de usuario"
          >
            <img
              src="/assets/header/account.svg"
              alt="Cuenta"
              class="w-7 h-7"
            />
          </button>
        </div>
      </div>

      <!-- Menú hamburguesa (mobile) -->
      <MobileMenu />
    </div>
  </div>
</header>

<script>
  import { initLanguageDropdown } from './Header/languageDropdown';
  import { initStickyHeader } from './Header/stickyHeader';

  initLanguageDropdown();
  initStickyHeader();
</script>
