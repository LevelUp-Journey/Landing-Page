---
// Header component
import LanguageDropdown from './Header/LanguageDropdown.astro';
import './Header/header.css';
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 border-b border-transparent">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo y título -->
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <img
          src="/assets/header-title.png"
          alt="Level Up Journey"
          class="h-8"
        />
      </a>

      <!-- Iconos de navegación -->
      <div class="flex items-center gap-6">
        <LanguageDropdown />

        <button
          class="hover:opacity-80 transition-opacity"
          aria-label="Cuenta de usuario"
        >
          <img
            src="/assets/header/account.svg"
            alt="Cuenta"
            class="w-7 h-7"
          />
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  import { initLanguageDropdown } from './Header/languageDropdown';
  import { initStickyHeader } from './Header/stickyHeader';

  initLanguageDropdown();
  initStickyHeader();
</script>
