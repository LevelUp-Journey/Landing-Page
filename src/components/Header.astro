---
// Header component
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 border-b border-transparent">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo y título -->
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <img
          src="/assets/header-title.png"
          alt="Level Up Journey"
          class="h-8"
        />
      </a>

      <!-- Iconos de navegación -->
      <div class="flex items-center gap-6">
        <button
          id="language-toggle"
          class="hover:opacity-80 transition-opacity"
          aria-label="Cambiar idioma"
        >
          <img
            src="/assets/header/i18n.svg"
            alt="Idioma"
            class="w-7 h-7"
          />
        </button>

        <button
          class="hover:opacity-80 transition-opacity"
          aria-label="Cuenta de usuario"
        >
          <img
            src="/assets/header/account.svg"
            alt="Cuenta"
            class="w-7 h-7"
          />
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  // Initialize language on load
  if (!localStorage.getItem('language')) {
    localStorage.setItem('language', 'es');
  }

  document.getElementById('language-toggle')?.addEventListener('click', () => {
    const currentLang = localStorage.getItem('language') || 'es';
    const newLang = currentLang === 'es' ? 'en' : 'es';

    localStorage.setItem('language', newLang);
    window.location.reload();
  });

  // Sticky header with scroll effect
  const header = document.getElementById('main-header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });
</script>

<style>
  #main-header {
    background: transparent;
  }

  #main-header.scrolled {
    background: rgba(23, 23, 23, 0.95);
    border-bottom-color: rgba(38, 38, 38, 0.5);
    backdrop-filter: blur(12px);
  }
</style>
