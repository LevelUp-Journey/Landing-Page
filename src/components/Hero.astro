---
// Hero Section - Level Up your C++ powers
import FloatingLanguages from './FloatingLanguages.astro';
import { JoinButton } from './ui/JoinButton';
import { EmailInput } from './ui/EmailInput';
import { HeroTitle } from './ui/HeroTitle';
import { HeroSubtitle } from './ui/HeroSubtitle';
---

<section
  class="relative min-h-screen flex items-center justify-center bg-cover bg-center bg-no-repeat"
  style="background-image: url('/assets/section1/background.svg');"
>
  <!-- Overlay oscuro para mejorar legibilidad -->
  <div class="absolute inset-0 bg-black/50"></div>

  <!-- Burbujas flotantes de lenguajes -->
  <FloatingLanguages />

  <!-- Contenido -->
  <div class="relative z-10 container mx-auto px-6 py-20 text-center">
    <!-- Logo/Mascota -->
    <div class="mb-8 animate-bounce-slow">
      <img
        src="/level-up-cat-full.svg"
        alt="Level Up Cat"
        class="w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 mx-auto drop-shadow-2xl"
      />
    </div>

    <HeroTitle
      client:load
      defaultText="Level Up Your C++ powers"
      i18nKey="section1.title"
    />

    <HeroSubtitle
      client:load
      defaultText="The online challenge editor made for UPC juniors. Practice, compile, and level-upâ€”right in your browser."
      i18nKey="section1.subtitle"
    />

    <!-- Email form -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 max-w-2xl mx-auto">
      <EmailInput client:load placeholder="Email Address" />
      <JoinButton client:load text="Sign up to the Journey" data-i18n-btn="section1.button" />
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-slow {
    animation: float 3s ease-in-out infinite;
  }
</style>
